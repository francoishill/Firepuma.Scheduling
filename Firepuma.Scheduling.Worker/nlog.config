<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      throwConfigExceptions="false"
      internalLogLevel="Off">
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>
    <targets>

        <target name="nlogviewer"
                xsi:type="NLogViewer"
                address="udp://host.docker.internal:9999"
                layout="${longdate} ${callSite} ${logger} ${message} ${exception:format=tostring}" />

        <target name="Console" xsi:type="Console" layout="${longdate} ${callsite} ${level} ${message}"/>
    </targets>
    <rules>
        <logger name="*" minlevel="Trace" writeTo="nlogviewer" />
    </rules>
</nlog>